<%= form_for @song do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>

  <br><br>

  <%= f.label :artist_id %>
  <%= f.number_field :artist_id %>

  <br><br>

  <%= f.label :genre_id %>
  <%= f.number_field :genre_id %>

  <br>

  <% if @song.id.nil? %>
    <%= f.submit 'Create Song' %>
  <% else %>
    <%= f.submit 'Update Song' %>
  <% end %>
<% end %>